@model HotelBooking.Models.Discount
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
    <script>
        window.tailwind = {
            config: {
                corePlugins: { preflight: false, container: false },
                prefix: 'tw-'
            }
        };
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
}

<style>
    /* Custom styles to mimic the coupon design */
    .coupon-card {
        background: radial-gradient(circle at 0 50%, transparent 15px, white 16px),
            radial-gradient(circle at 100% 50%, transparent 15px, white 16px);
        background-size: 100% 100%;
        background-position: 0 0, 100% 0;
        background-repeat: no-repeat;
    }

    .copy-button {
        transition: all 0.2s ease-in-out;
    }

    .copy-button:active {
        transform: scale(0.95);
        opacity: 0.8;
    }

    /* Avoid header overlap */
    .promo-page {
        padding-top: 12px;
    }

    .promo-breadcrumb {
        margin-top: 4px;
        margin-bottom: 8px;
    }
</style>

<div class="bg-gray-100 min-h-screen promo-page">
    <div class="mx-auto p-3 max-w-5xl">
        <nav aria-label="breadcrumb" class="promo-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/Promo">Ưu đãi</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>

        <!-- Header Banner -->
        <div class="relative rounded-xl overflow-hidden shadow-lg mb-6 bg-blue-500">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="w-full h-64 object-cover" alt="Promotion Banner">
            }
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="absolute bottom-0 left-0 p-8">
                <h1 class="text-4xl font-bold text-white shadow-md">@Model.Title</h1>
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p class="text-lg text-white/90 mt-2">@Model.Description</p>
                }
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="bg-[#e6f4ff] p-6 rounded-xl">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Mã giảm giá cho bạn</h2>

            <!-- Coupon Card -->
            <div class="bg-white rounded-xl shadow-md flex flex-col md:flex-row items-center coupon-card">
                <!-- Left Side: Details -->
                <div class="p-6 md:p-8 flex-grow w-full">
                    <div class="flex items-center gap-4">
                        <div class="bg-blue-100 text-blue-600 p-3 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                                class="bi bi-building" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5H1.5a.5.5 0 0 1-.5-.5v-15a.5.5 0 0 1 .237-.425l.487-.243L2 1.618l2.25.45V6H2.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h2v1H2.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h2v1H2.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h2v1.982l.75-.375V2.118l2.25-.45L12 1.618l.487.243.513.256zM.5 15V.5H1v14.5H.5zM15 15V.5h-1v14.5h1zM5 6.5a.5.5 0 0 0-.5-.5H3V6h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H3V4h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H3V2h1.5a.5.5 0 0 0 .5-.5zm0 8a.5.5 0 0 0-.5-.5H3v.5h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H3v.5h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H3v.5h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H3v.5h1.5a.5.5 0 0 0 .5-.5zM13 6.5a.5.5 0 0 0-.5-.5H11V6h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H11V4h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H11V2h1.5a.5.5 0 0 0 .5-.5zm0 8a.5.5 0 0 0-.5-.5H11v.5h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H11v.5h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H11v.5h1.5a.5.5 0 0 0 .5-.5zm0-2a.5.5 0 0 0-.5-.5H11v.5h1.5a.5.5 0 0 0 .5-.5z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">
                                @if (Model.DiscountPercent.HasValue)
                                {
                                    <span>Giảm @Model.DiscountPercent%</span>
                                }
                                else if (Model.DiscountAmount.HasValue)
                                {
                                    <span>Giảm @String.Format("{0:N0}", Model.DiscountAmount) VND</span>
                                }
                            </h3>
                            <p class="text-sm text-gray-500">
                                Hiệu lực: @Model.StartDate?.ToString("dd/MM/yyyy") -
                                @Model.EndDate?.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Dashed Separator -->
                <div
                    class="w-full md:w-px h-px md:h-24 border-dashed border-t-2 md:border-t-0 md:border-l-2 border-gray-300">
                </div>

                <!-- Right Side: Code & Copy Button -->
                <div class="p-6 text-center w-full md:w-auto md:min-w-[250px]">
                    <p class="text-sm text-gray-500 mb-1">Mã của bạn</p>
                    <input id="promoCode"
                        class="font-bold text-2xl text-center text-gray-800 bg-transparent w-full border-none focus:ring-0 p-0"
                        value="@Model.Code" readonly />
                    <button id="copyBtn"
                        class="bg-blue-500 text-white font-bold py-2 px-6 rounded-lg mt-3 w-full hover:bg-blue-600 copy-button"
                        onclick="copyCode()">
                        Sao chép
                    </button>
                    <div id="copySuccess" class="text-green-600 text-sm font-semibold mt-2" style="display: none;">
                        Đã sao chép!
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyCode() {
            const el = document.getElementById('promoCode');
            const copyBtn = document.getElementById('copyBtn');
            const successMessage = document.getElementById('copySuccess');

            // Use modern clipboard API with fallback
            if (navigator.clipboard) {
                navigator.clipboard.writeText(el.value).then(() => {
                    showSuccess();
                }).catch(err => {
                    // Fallback for http or other issues
                    copyUsingExecCommand(el);
                });
            } else {
                // Fallback for older browsers
                copyUsingExecCommand(el);
            }

            function copyUsingExecCommand(inputElement) {
                inputElement.select();
                inputElement.setSelectionRange(0, 99999); /* For mobile devices */
                try {
                    var successful = document.execCommand('copy');
                    if (successful) showSuccess();
                } catch (err) {
                    console.error('Fallback: Oops, unable to copy', err);
                }
            }

            function showSuccess() {
                copyBtn.innerHTML = 'Đã chép';
                copyBtn.classList.remove('bg-blue-500', 'hover:bg-blue-600');
                copyBtn.classList.add('bg-green-500');
                successMessage.style.display = 'block';

                setTimeout(() => {
                    copyBtn.innerHTML = 'Sao chép';
                    copyBtn.classList.remove('bg-green-500');
                    copyBtn.classList.add('bg-blue-500', 'hover:bg-blue-600');
                    successMessage.style.display = 'none';
                }, 2000);
            }
        }
    </script>
}
