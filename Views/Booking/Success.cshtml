@{
    ViewData["Title"] = "Đặt phòng thành công";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>

                <h1 class="h2 mb-3">Đặt phòng thành công!</h1>
                <p class="lead text-muted mb-4">
                    Cảm ơn bạn đã đặt phòng. Chúng tôi sẽ gửi email xác nhận đến địa chỉ email của bạn.
                </p>

                @if (!string.IsNullOrEmpty(ViewBag.BookingId as string))
                {
                    <div class="bg-light p-4 rounded mb-4">
                        <h5 class="mb-2">Mã đặt phòng</h5>
                        <p class="h4 text-primary mb-0">@ViewBag.BookingId</p>
                    </div>
                }

                <div class="row text-start">
                    <div class="col-md-6">
                        <h6 class="mb-3">Bước tiếp theo:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-envelope text-primary me-2"></i>
                                Kiểm tra email xác nhận
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                Nhân viên sẽ liên hệ xác nhận
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-calendar-check text-primary me-2"></i>
                                Đến khách sạn theo ngày đã đặt
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="mb-3">Hỗ trợ khách hàng:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                Hotline: 1900 1234
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-envelope text-primary me-2"></i>
                                Email: support@hotelbooking.com
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-clock text-primary me-2"></i>
                                24/7 hỗ trợ
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-3">
                        <i class="bi bi-house me-2"></i>Về trang chủ
                    </a>
                    <a href="@Url.Action("Search", "Public")" class="btn btn-outline-primary">
                        <i class="bi bi-search me-2"></i>Tìm khách sạn khác
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

