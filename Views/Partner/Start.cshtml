@model HotelBooking.Models.PartnerStartViewModel
@{
    ViewData["Title"] = "Tạo tài khoản đối tác";
}
<section class="py-5">
    <div class="container d-flex justify-content-center">
        <div class="bg-white p-4 p-md-5 rounded-4 shadow-sm" style="max-width:720px;width:100%;">
            <h4 class="fw-bold text-center mb-2">Tạo tài khoản đối tác</h4>
            <p class="text-muted small text-center">Tạo tài khoản để đăng ký và quản lý chỗ nghỉ.</p>

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">@TempData["success"]</div>
            }

            <form asp-action="Start" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-bk-primary w-100">Tiếp tục</button>
            </form>

            <hr class="my-4" />
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary w-100">Đăng nhập</a>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
