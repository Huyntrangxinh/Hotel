@{
    var p = ViewBag.Property as HotelBooking.Models.Property;
    ViewData["Title"] = p?.Name + " • Trung tâm quản lý";
    Layout = null; // Ẩn navbar/global layout cho màn PropertyHub
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-blue: #003580;
            --light-blue: #006ce4;
            --body-bg: #f0f2f5;
            --card-border: #e0e0e0;
            --text-secondary: #6c757d;
        }

        body {
            background-color: var(--body-bg);
            font-family: 'Inter', sans-serif;
        }

        /* Header */
        .extranet-header {
            background-color: var(--primary-blue);
            color: white;
            padding: 0.75rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-brand {
            font-weight: 700;
            font-size: 1.25rem;
        }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header-actions .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
            width: 250px;
        }

        .header-actions .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .header-icon {
            font-size: 1.25rem;
            color: white;
            text-decoration: none;
        }

        /* BẮT ĐẦU CSS MỚI CHO ICON */
        .extranet-eye-icon {
            font-size: 1rem;
            /* Kích thước icon */
            color: rgba(255, 255, 255, 0.7);
            /* Màu trắng mờ */
            vertical-align: middle;
            /* Căn chỉnh theo chiều dọc */
        }

        /* KẾT THÚC CSS MỚI */

        /* Navigation */
        .extranet-nav {
            background-color: white;
            border-bottom: 1px solid var(--card-border);
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
        }

        .nav-property-info {
            padding: 0.75rem 1rem 0.75rem 0;
            border-right: 1px solid var(--card-border);
            margin-right: 1rem;
        }

        .nav-property-info h6 {
            margin-bottom: 0;
            font-weight: 600;
        }

        .nav-main {
            display: flex;
            gap: 0.5rem;
            flex-grow: 1;
            flex-wrap: wrap;
        }

        .nav-link-item {
            padding: 1rem 0.75rem;
            color: var(--text-secondary);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border-bottom: 3px solid transparent;
        }

        .nav-link-item:hover {
            color: #212529;
        }

        .nav-link-item.active {
            border-bottom-color: var(--light-blue);
            color: #212529;
            font-weight: 600;
        }

        /* Main Content */
        .main-container {
            padding: 1.5rem;
        }

        .card {
            border: 1px solid var(--card-border);
            border-radius: 0.5rem;
        }

        .card-header {
            font-weight: 600;
        }

        /* Alert Cards */
        .alert-card {
            background-color: #fff8e1;
            border: 1px solid #ffecb3;
            color: #6d4c41;
        }

        .alert-card-danger {
            background-color: #fce4ec;
            border: 1px solid #f8bbd0;
            color: #880e4f;
        }

        /* Empty State */
        .empty-state {
            padding: 2rem;
            text-align: center;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 2.5rem;
        }
    </style>
</head>

<body>

    <header class="extranet-header shadow-sm">
        <div class="header-top">
            <div class="d-flex align-items-center gap-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <div class="header-brand ms-1">Booking.com</div>

                <!-- ĐOẠN CODE ĐÃ ĐƯỢC THAY ĐỔI -->
                <div class="d-flex align-items-center text-white fw-semibold">
                    <span>@p?.Name</span>
                    <a href="@Url.Action("Hotel", "Public", new { id = p?.Id })" title="Xem trang hiển thị"
                        class="text-decoration-none">
                        <i class="bi bi-eye ms-2 extranet-eye-icon"></i>
                    </a>
                    <span class="badge bg-success ms-2">Mở / Có thể đặt phòng</span>
                </div>
                <!-- KẾT THÚC THAY ĐỔI -->

            </div>
            <div class="header-actions">
                <input class="form-control form-control-sm" placeholder="Tìm trang và đơn đặt phòng">
                <a href="#" class="header-icon"><i class="bi bi-search"></i></a>
                <a href="#" class="header-icon"><i class="bi bi-question-circle"></i></a>
                <a href="#" class="header-icon"><i class="bi bi-bell"></i></a>
                <div class="dropdown">
                    <a href="#" class="header-icon dropdown-toggle" id="userMenu" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userMenu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i> Tài khoản</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-bag me-2"></i> Đặt chỗ & Chuyến đi</a>
                        </li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-stars me-2"></i> Chương trình khách hàng
                                thân thiết Genius</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-wallet2 me-2"></i> Tặng thưởng & Ví</a>
                        </li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-people me-2"></i> Đánh giá</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-heart me-2"></i> Đã lưu</a></li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li><a class="dropdown-item" href="@Url.Action("MyProperties", "Partner")"><i
                                    class="bi bi-shop-window me-2"></i> Cơ sở lưu trú của bạn</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("GoToHub", "Partner")"><i
                                    class="bi bi-kanban me-2"></i> Quản lý cơ sở lưu trú của bạn</a></li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <nav class="extranet-nav shadow-sm">
        <div class="nav-main">
            <a class="nav-link-item active" href="#"><i class="bi bi-house-door-fill"></i> Trang chủ</a>
            <a class="nav-link-item" href="@Url.Action("Calendar", "Partner", new { propertyId = p?.Id })"><i
                    class="bi bi-calendar3"></i> Giá & Tình trạng phòng trống</a>
            <a class="nav-link-item" href="#"><i class="bi bi-award"></i> Chương trình khuyến mãi</a>
            <a class="nav-link-item" href="#"><i class="bi bi-journal-text"></i> Đặt phòng</a>
            <a class="nav-link-item"
                href="@Url.Action("PropertyData", "Partner", new { propertyId = p?.Id, tab = "rooms" })"><i
                    class="bi bi-building"></i> Chỗ nghỉ</a>
            <a class="nav-link-item"
                href="@Url.Action("PropertyData", "Partner", new { propertyId = p?.Id, tab = "pricing" })"><i
                    class="bi bi-sliders"></i> Cấu hình giá</a>
            <a class="nav-link-item" href="#"><i class="bi bi-graph-up-arrow"></i> Thúc đẩy hiệu suất</a>
        </div>
    </nav>

    @* Ẩn thông báo success trên Hub theo yêu cầu *@

    <div class="container-fluid main-container">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Bookings -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Đặt phòng</span>
                        <input type="date" class="form-control form-control-sm" style="width: 150px;">
                    </div>
                    <div class="card-body empty-state">
                        <i class="bi bi-moon-stars"></i>
                        <p class="mt-2">Quý vị không có khách đến trong khoảng thời gian được chọn</p>
                        <a class="btn btn-outline-primary btn-sm mt-2" href="#">Xem tất cả đặt phòng</a>
                    </div>
                </div>

                <!-- Latest Bookings -->
                <div class="card mb-4">
                    <div class="card-header">Đặt phòng mới nhất</div>
                    <div class="card-body empty-state">
                        <i class="bi bi-briefcase"></i>
                        <p class="mt-2">Quý vị chưa có thêm đặt phòng nào trong vòng 60 ngày qua</p>
                    </div>
                </div>
                <!-- Performance -->
                <div class="card">
                    <div class="card-header">Hiệu suất hoạt động (Trong 30 ngày qua)</div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col">
                                <div class="fw-bold fs-5">0</div>
                                <small class="text-muted">Giá trung bình hàng ngày</small>
                            </div>
                            <div class="col">
                                <div class="fw-bold fs-5">0%</div>
                                <small class="text-muted">Tỷ lệ hủy</small>
                            </div>
                            <div class="col">
                                <div class="fw-bold fs-5">0</div>
                                <small class="text-muted">Doanh thu</small>
                            </div>
                            <div class="col">
                                <div class="fw-bold fs-5">0</div>
                                <small class="text-muted">Số đêm đã lưu trú</small>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <h6 class="fw-bold">Để xuất hỗ trợ Quý vị tăng hiệu suất</h6>
                                <p class="mb-0 small">Thu hút 71% khách đang tìm kiếm dịch vụ giá trị gia tăng.</p>
                            </div>
                            <a href="#" class="btn btn-outline-primary btn-sm">Bắt đầu với dịch vụ giá trị gia tăng</a>
                        </div>
                    </div>
                </div>

            </div>
            <!-- Right Column -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">Đang chờ xử lý</div>
                    <div class="card-body">
                        <p class="small text-muted">Hoàn tất! Thông báo sẽ hiển thị tại đây khi có nhiệm vụ mới.</p>
                    </div>
                </div>
                <div class="card text-center">
                    <div class="card-header">Đề xuất</div>
                    <div class="card-body">
                        <img src="https://placehold.co/150x100/E8F0FE/003580?text=Cơ+hội" class="mb-3"
                            alt="Opportunities">
                        <h6 class="fw-bold">Khám phá Trung tâm Cơ hội</h6>
                        <p class="small text-muted">Để tìm vô số đề xuất về cách cải thiện tất cả các chỉ số chính của
                            Quý vị.</p>
                        <a href="#" class="btn btn-outline-primary w-100">Mở Trung tâm Cơ hội</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (enable dropdowns) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Ensure dropdown works even if dynamically loaded
        document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function (el) {
            new bootstrap.Dropdown(el);
        });
    </script>
</body>

</html>
