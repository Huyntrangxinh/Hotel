@model PropertyDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết đăng ký: " + Model.PropertyName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">Chi tiết đăng ký</h1>
            <p class="text-muted">Xem lại thông tin do đối tác cung cấp trước khi duyệt.</p>
        </div>
        <div>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Quay lại danh
                sách</a>
        </div>
    </div>

    <div class="card bg-light mb-4">
        <div class="card-body d-flex justify-content-end align-items-center">
            <span class="me-3 fw-bold">Hành động:</span>
            <form asp-area="Admin" asp-controller="Dashboard" asp-action="Approve" method="post" class="d-inline">
                <input type="hidden" name="propertyId" value="@Model.PropertyId" />
                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill me-2"></i>Duyệt hồ sơ
                    này</button>
            </form>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="RejectWithReason"
                asp-route-id="@Model.PropertyId" class="btn btn-danger ms-2">
                <i class="bi bi-x-circle-fill me-2"></i>Từ chối
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin chung & Người phụ trách</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tên cơ sở</dt>
                        <dd class="col-sm-8">@Model.PropertyName</dd>
                        <dt class="col-sm-4">Địa chỉ</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                        <dt class="col-sm-4">SĐT cơ sở</dt>
                        <dd class="col-sm-8">@Model.PropertyPhoneNumber</dd>
                        <hr class="my-3">
                        <dt class="col-sm-4">Người phụ trách</dt>
                        <dd class="col-sm-8">@Model.PicFirstName @Model.PicLastName</dd>
                        <dt class="col-sm-4">Chức vụ</dt>
                        <dd class="col-sm-8">@Model.PicPosition</dd>
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.PicEmail</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Thông tin Hợp đồng & Pháp lý</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tên pháp nhân</dt>
                        <dd class="col-sm-8">@Model.LegalEntityName</dd>
                        <dt class="col-sm-4">Địa chỉ pháp nhân</dt>
                        <dd class="col-sm-8">@Model.LegalEntityAddress</dd>
                        <hr class="my-3">
                        <dt class="col-sm-4">Người ký HĐ</dt>
                        <dd class="col-sm-8">@Model.SignatoryName</dd>
                        <dt class="col-sm-4">GPKD</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.BusinessLicensePath))
                            {
                                <a href="@Model.BusinessLicensePath" target="_blank">Xem file</a>
                            }
                            else
                            {

                                <span class="text-muted">Không có</span>
                            }
                        </dd>
                        <dt class="col-sm-4">CCCD</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.SignatoryIdCardPath))
                            {
                                <a href="@Model.SignatoryIdCardPath" target="_blank">Xem file</a>
                            }
                            else
                            {

                                <span class="text-muted">Không có</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card sticky-top">
                <div class="card-header">
                    <h5 class="mb-0">Xem trước hợp đồng PDF</h5>
                </div>
                <div class="card-body p-2">
                    <iframe
                        src="@Url.Action("GenerateContractPdf", "Partner", new { propertyId = Model.PropertyId, area = "" })"
                        style="width: 100%; height: 600px; border: none;">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>