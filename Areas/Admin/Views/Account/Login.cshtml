@model HotelBooking.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Quản trị";
    Layout = null; // Trang này không dùng layout chung
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            min-height: 100vh;
        }

        .login-card {
            max-width: 450px;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center login-container">
        <div class="card shadow-sm border-0 rounded-4 p-4 p-md-5 login-card">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary">Admin Portal</h3>
                <p class="text-muted">Đăng nhập để vào hệ thống quản trị</p>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>